<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">
  
  <Id>a1b2c3d4-5678-90ab-cdef-123456789abc</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>RBI</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="IDMS Mail Archivator"/>
  <Description DefaultValue="Automatic email archiving system"/>
  <IconUrl DefaultValue="https://via.placeholder.com/64"/>
  <HighResolutionIconUrl DefaultValue="https://via.placeholder.com/64"/>
  <SupportUrl DefaultValue="https://www.rbinternational.com"/>
  
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.5"/>
    </Sets>
  </Requirements>
  
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="http://localhost:5500/taskpane.html"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <Permissions>ReadWriteMailbox</Permissions>
  
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
      
      <Requirements>
        <bt:Sets DefaultMinVersion="1.5">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>
      
      <Hosts>
        <Host xsi:type="MailHost">
          
          <DesktopFormFactor>
            
            <ExtensionPoint xsi:type="MessageReadCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="idmsGroup">
                  <Label resid="GroupLabel"/>
                  
                  <Control xsi:type="Button" id="openPanelButton">
                    <Label resid="PanelButton.Label"/>
                    <Supertip>
                      <Title resid="PanelButton.Label"/>
                      <Description resid="PanelButton.Tooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16x16"/>
                      <bt:Image size="32" resid="Icon.32x32"/>
                      <bt:Image size="80" resid="Icon.80x80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="Taskpane.Url"/>
                    </Action>
                  </Control>
                  
                </Group>
              </OfficeTab>
            </ExtensionPoint>
            
          </DesktopFormFactor>
          
        </Host>
      </Hosts>
      
      <Resources>
        <bt:Images>
          <bt:Image id="Icon.16x16" DefaultValue="https://via.placeholder.com/16"/>
          <bt:Image id="Icon.32x32" DefaultValue="https://via.placeholder.com/32"/>
          <bt:Image id="Icon.80x80" DefaultValue="https://via.placeholder.com/80"/>
        </bt:Images>
        <bt:Urls>
          <bt:Url id="Taskpane.Url" DefaultValue="http://localhost:5500/taskpane.html"/>
        </bt:Urls>
        <bt:ShortStrings>
          <bt:String id="GroupLabel" DefaultValue="IDMS"/>
          <bt:String id="PanelButton.Label" DefaultValue="IDMS Archivator"/>
        </bt:ShortStrings>
        <bt:LongStrings>
          <bt:String id="PanelButton.Tooltip" DefaultValue="Open IDMS Mail Archivator panel"/>
        </bt:LongStrings>
      </Resources>
      
    </VersionOverrides>
  </VersionOverrides>
  
</OfficeApp>
